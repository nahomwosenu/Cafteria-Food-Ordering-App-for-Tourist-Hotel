<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.touristhotel.www.main.AddItemFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Menu Item"
                android:textSize="28sp"
                android:textColor="#fff"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_gravity="center"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_below="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/imgItem"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_local_cafe_black_24dp"/>
            <EditText
                android:id="@+id/txtItem"
                android:layout_margin="20dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Item Name"
                android:drawableLeft="@drawable/ic_local_cafe_black_24dp"
                android:inputType="textAutoComplete"/>
            <EditText
                android:id="@+id/txtPrice"
                android:layout_margin="5dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Item Price in ETB"
                android:drawableLeft="@drawable/ic_local_cafe_black_24dp"
                android:inputType="numberDecimal"/>
            <EditText
                android:id="@+id/txtDescription"
                android:layout_margin="5dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Item Description \nor Item  details"
                android:drawableLeft="@drawable/ic_local_cafe_black_24dp"
                android:inputType="numberDecimal"
                android:lines="3"/>
            <Spinner
                android:id="@+id/spinMain"
                android:layout_margin="5dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:entries="@array/main_catagory"
                android:prompt="@string/main_category"
                />
            <Spinner
                android:id="@+id/spinSub"
                android:layout_margin="5dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:entries="@array/sub_catagory"
                android:prompt="@string/sub_category"
                />
            <Button
                android:id="@+id/btnImage"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Choose Item Image"
                android:textColor="#fff"
                android:background="@drawable/buttonstylepink"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/btnCancel"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textColor="#fff"
                    android:background="@drawable/buttonstyle"
                    android:gravity="center"/>
                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:textColor="#fff"
                    android:background="@drawable/buttonstyle"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    </ScrollView>
</FrameLayout>
